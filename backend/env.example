# Enhanced RAG API Configuration

# API Keys
TOGETHER_API_KEY=your_together_api_key_here

# Data Processing Configuration
# Set to "true" to skip automatic data processing on API startup
# This is recommended for production to avoid expensive LLM calls on every restart
SKIP_AUTO_PROCESSING=true

# LLM Configuration
LLM_PROVIDER=chatopenai
LLM_MODEL=meta-llama/Llama-3.3-70B-Instruct-Turbo-Free

# Vector Database Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
PERSIST_DIRECTORY=./chroma_db
COLLECTION_NAME=demo_collection

# Document Processing Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100 

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=vac_feedback 